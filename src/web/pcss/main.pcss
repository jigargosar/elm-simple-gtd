* {
  box-sizing: border-box;
}

.hidden {
  visibility: hidden !important;
}

.display-none {
  display: none;
}

.focusable-list {
  & > * {
    outline: none;
  }

  & > [tabindex="0"] {
    position: relative;
    &:before {
      position: absolute;
      content: "";
      width: 100%;
      height: 100%;
      background-color: black;
      opacity: 0.06;
    }
    &:focus {
      &:before {
        opacity: 0.15;
      }
    }
  }
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.small {
  font-size: 0.7rem;
  line-height: 1.2em;
}

.col {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.row-item-stretched {
  display: flex;
  flex-direction: row;
//align-items:stretch; //justify-content: space-around;

  & > * {
    flex: 1 1 auto;
  }
}

.col-item-stretched {
  display: flex;
  flex-direction: column;
