/*@import "lib/reset.pcss";*/

.hidden {
  display: none !important;
}

.ellipsis{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.small{
  font-size: 0.7rem;
  line-height: 1.2em;
}

.dim{
  opacity: 0.5;
}

#main-view {
  margin: 1rem;
}

#add-fab {
  position: fixed;
  right: 10px;
  bottom: 10px;
}

.edit-todo-input {
  width: 100%;
}

.flex-expand {
  flex: 1 1 auto;
}


.has-hover-items:hover{
  & .hover-items{
    display: block;
  }
}

.has-hover-items{
  & .hover-items{
    display: none;
  }
}



.todo-list {
  background-color: white;


  & .todo-item {
    border-top: 1px solid rgba(179, 179, 179, 0.53);

    & .done{
      text-decoration: line-through;
      opacity: 0.6;
    }
    
    & .show-on-hover {
      display: none;
    }

    &:hover .hide-on-hover {
      display: none;
    }

    &:hover .show-on-hover {
      display: flex;
    }

    & paper-item-body {
      cursor: pointer;
    }

  }

}

#in-basket-flow-container {
  padding: 1rem;
  background-color: white;
}



