{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "todo-db": {
          ".indexOn": [
            "modifiedAt"
          ]
        },
        "context-db": {
          ".indexOn": [
            "modifiedAt"
          ]
        },
        "project-db": {
          ".indexOn": [
            "modifiedAt"
          ]
        }
      }
    },
    "notifications": {
      ".indexOn": [
        "timestamp"
      ],
      "$uidTodoId":{
        ".write":"(newData.child('uid').val() === auth.uid && $uidTodoId === auth.uid + '---' + newData.child('todoId').val() && newData.child('timestamp').isNumber()) || (data.child('uid').val() === auth.uid && !newData.exists())"
      }
    }
  }
}
