  }

}

.todo-item /*, .entity-item*/
{
  &:focus[tabindex="0"] {
    border-left: 2px solid rgba(0, 0, 172, 0.77);
  }

  &[tabindex="0"] {
    border-left: 2px solid rgba(0, 0, 172, 0.44);
  }
}

.todo-item {
  padding: 0.5rem 1rem;
  background-color: white;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4);
  outline: none;
  border-left: 2px solid transparent;

  /*&.selected{
    background-color: rgba(255, 255, 0, 0.52);
  }*/

  /*
  &:not(.editing) {
    & paper-item-body {
      padding: 10px 0;
    }
  }
  */

  &.editing {
    flex-direction: column;
    align-items: stretch;
  }

  & paper-icon-button {
    width: 24px;
    height: 24px;
    padding: 0;
  }

  & .display-text {
    padding: 0 8px;
  }

  & paper-item-body {
    cursor: pointer;
  }

  & .reminder-text {
    text-decoration: underline black;
    &.overdue {
      text-decoration: underline red;
    }
  }

}

