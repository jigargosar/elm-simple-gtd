}

.active-task-view {
  padding: 16px 16px 0;
  & .title {

  }

  & .elapsed-time {
    display: inline-block;

  }
}

#add-fab {
  position: fixed;
  right: 10px;
  bottom: 10px;
}

.w100 {
  width: 100%;
}

.flex-expand {
  flex: 1 1 auto;
}

paper-item, .has-hover-elements {
  & > .show-on-hover {
    display: none;
  }

  /*
  &[selected] > .show-on-hover{
    display: flex;
  }
  */

  & > .hide-on-hover {
    display: flex;
  }

  &:hover > .show-on-hover {
    display: flex;
  }
  &:hover > .hide-on-hover {
    display: none;
  }
}

.project-list {
  background-color: white;

  & .project-item {
    border-top: 1px solid rgba(179, 179, 179, 0.53);
  }
}

.todo-list-title {
  text-transform: capitalize;
//font-size: 0.9rem; font-weight: 600; color: rgba(0, 0, 0, 0.44); display: inline-block;
}

.todo-list-container {
  margin-top: 2rem;
}

paper-item {
//min-height:40px;
}

.todo-list {
  background-color: white;

  & .todo-item {

    border-top: 1px solid rgba(179, 179, 179, 0.53);

    &:first-child {
      border-top: 1px solid transparent;
    }

    &:not(.editing) {
      & paper-item-body {
        padding: 10px 0;
      }
    }

    &.editing {
      flex-direction: column;
      align-items: stretch;
    }

    & paper-icon-button {
      width: 24px;
      height: 24px;
      padding: 0;
    }

    & .text {
      padding: 0 8px;
    }

    & paper-item-body {
      cursor: pointer;
    }

    & .reminder-text{
      text-decoration: underline black;
      &.overdue{
        text-decoration: underline red;
      }
    }

  }

}

#in-basket-flow-container {
  padding: 1rem;
  background-color: white;
}

.big-dialog {
  position: absolute;
  width: 300px;
  height: 300px;
  background-color: rgba(0, 0, 0, 0.64);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100000;
}

