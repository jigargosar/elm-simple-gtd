[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=8

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=space
indent_size=4

[{*.mod,*.dtd,*.ent,*.elt}]
indent_style=space
indent_size=4

[{*.jhm,*.xslt,*.xul,*.svg,*.rng,*.xsl,*.xsd,*.ant,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=space
indent_size=4

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=4

[*.java]
indent_style=space
indent_size=4

[*.css]
indent_style=space
indent_size=4

[{*.applejs,*.js}]
indent_style=space
indent_size=4

[{*.ats,*.ts}]
indent_style=space
indent_size=4

[*.js.flow]
indent_style=space
indent_size=4

[{jshint.json,*.jshintrc}]
indent_style=space
indent_size=4

[*.pcss]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

