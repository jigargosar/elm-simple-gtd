@import "polymer.pcss";

* {
  box-sizing: border-box;
}

.hidden {
  visibility: hidden !important;
}

.display-none {
  display: none;
}

.focusable-list > * {
  outline: none;
  position: relative;

  &:before {
    position: absolute;
    left: 0;
    top: 0;
    content: "";
    width: 100%;
    height: 100%;
    background-color: transparent;
  }
  &:focus {
    &:before {
      opacity: 0.15;
    }
  }

  &[tabindex="0"] {
    &:before {
      background-color: black;
      opacity: 0.02;
    }
  }

  &.selected {
    &:before {
      background-color: rgb(255, 255, 0);
      opacity: 0.06;
    }
  }
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.small {
  font-size: 0.7rem;
  line-height: 1.2em;
}

